<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <style>
        li #availableusers:hover {
            color: red !important;
            text-decoration: none !important;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #2ECD71">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TodoApp", "Index", "Notes", new { area = "" }, new { @class = "navbar-brand", @style = "color:black; font-weight: bold; :hover{color:white;}"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:black;">
                    <li>@Html.ActionLink("Available Users", "Index", "Users")</li>
                    <li>@Html.ActionLink("Types Settings", "Index", "Types")</li>
                    <li>@Html.ActionLink("About Us", "AboutUs", "AboutUs")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Arquitectura y Construcción de Software Project App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
